{
  "extends": "recommended",

  "rules": {
    "convention.CompileStatic": "off",

    "formatting.LineLength": { "length": 140 },
    "formatting.Indentation": { "spacesPerIndentLevel": 1 },
    "formatting.NoTabCharacter": "off",

    "InvertedCondition": "off",

    "size.NestedBlockDepth": { "maxNestedBlockDepth": 10},
    "size.ParameterCount": { "maxParameters": 9 },

    "dry.DuplicateStringLiteral": { "ignoreStrings": ",/,\n,Jenkinsfile" },

    "unnecessary.UnnecessaryGetter": { "checkIsMethods": false },

    "UnnecessaryObjectReferences": { "enabled": false }
  }
}
